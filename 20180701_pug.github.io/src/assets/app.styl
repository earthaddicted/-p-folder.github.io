 @import '../globals/*'
@import '../blocks/**/*'

html
    margin: 0
    padding: 0
    font-size: 16px
    scroll-behavior: smooth

body
    margin: 0
    padding: 0
    color: $textColor
    font-family: 'Montserrat', sans-serif
    min-width: 320px
    overflow-x: hidden
    display: flex
    scroll-behavior: smooth
    -webkit-overflow-scrolling: touch
    flex-direction: column
    position: relative
    color: #000

/* sticky footer */
html,
body
    height: 100%;
    width 100%
    overflow-x hidden
    width: 100vw;

main
    flex: 1 0 auto
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-direction column
    justify-content: space-between

section
    &:first-of-type
        padding-top 100px

    &:last-of-type
        // padding-bottom 60px

a,
a:link,
a:visited,
a:focus,
button
    cursor: pointer
    text-decoration: none

a
    @include transition-ease-in-out

/* sticky footer END */

*
    box-sizing: border-box
    list-style: none
    scroll-behavior: smooth

    &:focus,
    &:hover
        outline: none

h1,
h2
    font-size: 48px
    font-weight: 700
    max-width 460px

    @media screen and (max-width: 1024px)
        font-size: 36px

h3
    font-size: 24px;
    font-weight: 700;

    @media screen and (max-width: 1024px)
        font-size: 22px

.special-block-s
    .ul-list
        li
            font-weight: 700
            font-size: 24px
            padding: 20px 0 20px 40px
            
            &::before
                top: 50%
                transform translateY(-50%)

            @media screen and (max-width: 1024px)
                font-size: 22px

.ul-list
    padding-left: 0

    li
        position: relative
        padding: 5px 0 5px 40px
        font-size: 14px
        font-weight: 400

        &::before
            position: absolute
            content: " "
            display: block
            width: 21px
            height: 3px
            background-color: #25c8f1
            left 0
            top: 50%
            top 13px
            // transform translateY(-50%)

.section__wrapper
        width 100%
        margin auto
        max-width 1170px
        padding 20px

        &-l
            max-width 1205px
            padding 20px 0
                
        &-xl
            max-width 1275px
            max-width 1305px
            padding 20px

        h2
                max-width 400px

        &-col
                flex-direction column


.block-row {
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    align-items: center
    width: 100%
    margin 10px 0
}

/* buttons settings */
.btn-b-wrapper
    &__purple
        .btn-wrap__link
            box-shadow: 0 25px 35px -15px #a07ee2
            // background: linear-gradient(25deg, #5f52f1 0%, #8377ff 100%)
            background-image: linear-gradient(to right, #5f52f1 0%, #8377ff 51%, #8377ff 100%)
            color: #fff
            background-size: 200% auto
            transition .3s ease-in-out

            
            &:hover
                color: #fff
                background-position: right center

    &__blue
        .btn-wrap__link,
        .link
            position: relative
            z-index: 1
            color: #0f1266
            transition: background .3s ease-out
            background: #f5f5f5
            background-image: linear-gradient(to right, #25c8f1 0%, #28ebff 51%, #28ebff 100%)
            background-size: 200% auto
            transition .3s ease-in-out

            &:hover
                background-position: right center


.btn-wrap
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        justify-content: flex-start
        margin: auto
        width: auto

        &__link
                margin 50px 0
                padding 15px 35px
                font-size: 24px
                font-weight: 700
                border-radius: 2px
                cursor: pointer

                transition .3s ease-in-out

                @media screen and (max-width: 812px)
                    padding: 15px 19px;
                    font-size: 22px

                &:hover
                    background-position: right center

.ancor
        display inline-block
        margin 20px 0
        font-size: 24px
        font-weight: 700
        padding-bottom: 4px
        border-bottom: 3px solid transparent
        cursor pointer

        &:hover
            border-bottom: 3px solid transparent
            transition: .3s ease-in-out

.section
    &_dark

        .btn-wrap

            &__link
                box-shadow: 0 25px 35px -15px #17105f

                &:hover
                    // color: #0f1266

        .ancor
            color: #28ebff

            &:hover
                border-bottom: 3px solid #28ebff

            &-play
                position relative
                font-size: 18px
                margin-left 40px
                margin: 20px 0 20px 40px

                &::before
                    content " "
                    position absolute
                    width 26px
                    height 26px
                    top -3px
                    left -38px
                    background-image url('/assets/img/play.png')
                    background-size cover
                    background-repeat no-repeat

    &_light
        .btn-wrap

            &__link
                box-shadow: 0 25px 35px -15px #c2b3e1

            .ancor
                color: #25c8f1

                &:hover
                    border-bottom: 3px solid #25c8f1

/* buttons settings END */


