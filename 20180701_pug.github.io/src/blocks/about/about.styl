.section
    &_about
        padding-bottom 770px
        background url('../assets/svg/img-bg-special-s.svg')
        background-repeat no-repeat
        background-size cover
        background-position 50% 100%
        position relative

        @media screen and (min-width: 1700px)
            padding-bottom 1052px

        @media screen and (max-width: 870px)
            padding-bottom 340px
            padding-bottom 580px

        @media screen and (max-width: 667px)
            padding-bottom: 453px

        @media screen and (max-width: 500px)
            padding-bottom: 270px

        .section__wrapper
            z-index 0

    .section__wrapper
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        position relative

        @media screen and (max-width: 720px)
            flex-direction: column

    &_dark
        color #fff

        h1,
        h2
            color #fff

    &_light
        color #090909

        h1,
        h2
            color: #0f1266

    .about-page__solutions
        margin-top 300px
        padding-bottom 50px

        @media screen and (max-width: 1024px)
            padding-bottom 0

        @media screen and (max-width: 720px)
            margin-top 20px

        .w-half
            &:first-of-type
                width 70%
                max-width 710px
                margin-right 0
                padding-right 0
                // padding-right 33px
                    
                @media screen and (max-width: 720px)
                    width 100%
                
                p
                    max-width 50%
                    padding 0px 20px 30px 20px
                    
                    @media screen and (max-width: 1024px)
                        max-width: 100%

            &:nth-of-type(2)
                width 30%
                min-width 430px
                margin-right 0
                
                @media screen and (max-width: 1024px)
                    min-width 362px
                    
                @media screen and (max-width: 720px)
                    width 100%


.w-half
    position relative

.img-bg
    position absolute
    right -80px
    top -10px
    z-index: -1

    @media screen and (max-width: 1024px)
        right 0
        width 146%

    @media screen and (max-width: 720px)
        position relative
        top: -20px
        right: -58px
        width: 100%;

// page about
.section_about-page
    position relative
    background url('../assets/svg/about-bg-4.svg')
    background-repeat no-repeat
    // background-size cover
    background-position 50% 95%
    
    @media screen and (max-width: 720px)
        background-position 50% 20%
    
    .section__wrapper
        z-index 0
    
    p
        max-width 442px
        padding-right 10px
        line-height: 30px
        color: #090909
        font-size: 18px
        font-weight: 400
        line-height: 30px

    .img-bg
        right: -374px

        @media screen and (max-width: 1200px)
            right: -260px;

        @media screen and (max-width: 1024px)
            width: 1251px
            top: 46px
            right: -184px

        @media screen and (max-width: 720px)
            width: 1163px
            top: -20px
            right: 711px

