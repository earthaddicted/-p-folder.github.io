mixin header(data)
		+b('header').header
			+e.wrapper
				+b.menu-decor
					+e.icon
						+e.hamburger
							span
							span
							span
							span

					+e.text
						+b.close-menu
							+e('span').closed Menu
							+e('span').opened Close

				if data.header
					+e.logo(href=data.header.url)

				if data.menu
					+e('ul').menu
						each item in data.menu
							+e.menu-item
								+e.link(href=item.url)= item.title

mixin breadcrumbs(data)
	+b.breadcrumbs-wrapper
		ul
			li a(href='index.html') Home
			li a(href='about.html') About
