    transition: all 0.5s cubic-bezier(.25, .1, .25, 1)
    
    @media screen and (max-width: 917px)
        padding: 36px 0 50px


    textarea
        resize: none
        -webkit-appearance: textarea

    input,
    textarea
        width 100%
        max-width 468px
        background transparent
        border: 3px solid transparent
        color: #090909
        font-size: 24px
        font-weight: 400
        z-index 0
        position: relative
        z-index: 1000
        background: none
        border: 0
        font-size 24px
        border-bottom 3px solid #dccaff
        font-family: 'Montserrat', sans-serif

        &:focus
            border-bottom 3px solid #25c8f1 !important

    span,
    label
        z-index: 500
        position: absolute
        left: 0
        top: 7px
        font-size: 24px
        -moz-user-select: none
        -webkit-user-select: none
        -khtml-user-select: none
