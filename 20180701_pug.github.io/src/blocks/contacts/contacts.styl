        font-family: 'Montserrat', sans-serif

.submit_wrapper
    button
        margin: 20px 0
        padding: 15px 35px
        font-size: 24px
        font-weight: 700
        -webkit-border-radius: 2px
        border-radius: 2px
        cursor: pointer
        color: #0f1266
        -webkit-background-size: 300% 100%
        background-size: 300% 100%
        moz-transition: all 0.4s ease-in-out
        -o-transition: all 0.4s ease-in-out
        -webkit-transition: all 0.4s ease-in-out
        transition: all 0.4s ease-in-out
        background-image: linear-gradient(45deg, #25c8f1 0%, #28ebff 100%)
        box-shadow: 0 25px 35px -15px #c2b3e1
        border 0px solid transparent
        font-family: 'Montserrat', sans-serif

.success_wrapper,
.form_error
    display none


.contacts-services ~ .w-half
    padding-left 30px
    
.form_field_error
    input,
    textarea
        border-bottom 3px solid rgba(215, 40, 40, 0.9) !important
        
        &:focus
            border-bottom 3px solid rgba(215, 40, 40, 0.9) !important
