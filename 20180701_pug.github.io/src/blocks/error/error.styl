.error-page
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-direction column
    justify-content: center
    align-items: center
    background-image: linear-gradient(180deg, #42178c 0%, #413b85 100%);

    .btn-wrap
        justify-content: center

        &__link
            white-space nowrap
            
            @media screen and (max-width: 720px)
                padding 18px
                font-size: 22px

    .err-msg
        h1,
        span
            color: #fff
            font-size: 24px
            font-weight: 700
            text-align center
            margin auto
            
            @media screen and (max-width: 720px)
                font-size: 22px

.section
    &_error
        text-align center

        .section__wrapper
            justify-content: center
            align-items: center

        .block-col-item
            width 100%
            
            img
                max-width 100%

.error-page ~ footer
    display none