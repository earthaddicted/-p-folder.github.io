include ../../node_modules/bemto.pug/bemto
include ../blocks/all

- 
	set_bemto_settings({
		prefix: '',
		element: '__',
		modifier: '_'
	})

block params
	- var lang = 'ua'

if lang == 'ua'
	include ../globals/dataUa
else
	include ../globals/dataEn

doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, maximum-scale=1.0")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=cyrillic,cyrillic-ext")
		link(rel="stylesheet" href="assets/app.css")
	body
		block content

		script(src="https://code.jquery.com/jquery-3.3.1.min.js")
		script(src="assets/vendor.js")
		script(src="assets/app.js")

